{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/info",
        "destination": "/index.html"
      },
      {
        "source": "/sobre-nosotros",
        "destination": "/about.html"
      },
      {
        "source": "/contactos",
        "destination": "/contact.html"
      }
    ]
  }
}
